<section class="leadership">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <section class="section-sm section-flush-top">
          <h2 class="text-center">Our advisors</h2>
        </section>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <% data.advisors.people.each do |f| %>
          <section class="section-xs">
            <div class="row">
              <div class="col-sm-3">
                <div class="portrait"><%= image_tag "advisors/#{f.image}.jpg", :title => "#{f.name} - #{f.role}" %></div>
              </div>
              <div class="col-sm-9">
                <h5><%= f.name %></h5>
                <div class="role"><%= f.role %></div>
                <p class="bio"><%= f.bio %></p>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</section>
<hr>
